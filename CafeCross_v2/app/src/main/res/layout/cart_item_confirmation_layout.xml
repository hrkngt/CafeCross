<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvConfirmProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Blue Mountain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvConfirmPrice"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:text="450"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvConfirmProductName" />

    <TextView
        android:id="@+id/tvConfirmQuantity"
        android:layout_width="65dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="32dp"
        android:gravity="end"
        android:text="1x100g"
        app:layout_constraintBottom_toBottomOf="@+id/tvConfirmPrice"
        app:layout_constraintStart_toEndOf="@+id/tvConfirmPrice" />

    <TextView
        android:id="@+id/tvConfirmTotalPerItem"
        android:layout_width="65dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="32dp"
        android:gravity="end"
        android:text="450"
        app:layout_constraintBottom_toBottomOf="@+id/tvConfirmQuantity"
        app:layout_constraintStart_toEndOf="@+id/tvConfirmQuantity" />

    <TextView
        android:id="@+id/tvConfirmTotalPrice"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:text="450"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvConfirmTotalPerItem" />

</android.support.constraint.ConstraintLayout>